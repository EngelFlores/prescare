<%- contentFor('body') %>

  <div class="cabecalho-telas">
    <%- include partials/cabecalhoTelas.ejs %>
      <div class="botao-voltar">
        <a href="/acolhido/<%=acolhido.id %>">Voltar</a>
      </div>
  </div>

  <form action="/acolhido/<%= acolhido.id %>/prescricao" method="POST">
    <label for="validade" class="sub-titulo">Validade da Prescrição</label>
    <input type="text" name="validade" id="validade">
    <div class="botoes">
      <input type="submit" value="Salvar" onclick="alert('Validade definida')">
    </div>
  </form>
  
  <div class="botao-voltar">
    <a href="/acolhido/<%=acolhido.id%>">Voltar</a>
  </div>

  <script>
    window.$(function () {
      window.$("#validade").datepicker({
        dateFormat: "dd/mm/yy"
      });
    });
  </script>