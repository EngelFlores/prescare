<label for="cuidado">Cuidados</label>
<table class="tabela-prescricao">
    <tr>
        <th>Descrição</th>
        <th>Intervalo</th>
        <th>Observações</th>        
        <th>Edição</th>
    </tr>
    <tr>
        <%for (cuidado of prescricao.cuidados){%>
            <td>
                <%= cuidado.descricao %>
            </td>
            <td>
                <%= cuidado.intervalo %>
            </td>
            <td>
                <%= cuidado.observacoes %>
            </td>
            <td class="td-botao">
                <div>
                <a href="<%= updateUrl %>/cuidado/<%= cuidado.id %>/edit" class="fa fa-edit edit btn btn-outline-primary btn-sm"></a>
                <form action="<%= updateUrl %>/cuidado/<%= cuidado.id %>/edit/excluir" method="POST">
                    <button type="submit" class="fa fa-trash-alt btn btn-outline-danger btn-sm" 
                    onclick="return confirm('Tem certeza que deseja excluir?');">
                    </button>
                </form>
            </div>
            </td>
    </tr>
    <%}%>
</table>