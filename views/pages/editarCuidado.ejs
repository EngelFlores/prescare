<form action="<%= updateUrl %>" method="POST">
  <div class="medicamento">
    <h1>Cuidado</h1>
    <div>
      <label for="descricao">Descricao:</label>
      <input type="text" name="descricao" id="descricao" value="<%= cuidado.descricao %>">
    </div>

    <div>
      <label for="intervalo">Intervalo:</label>
      <input type="text" name="intervalo" id="intervalo" value="<%= cuidado.intervalo %>">
    </div>

    <div>
      <label for="observacoes">Observações:</label>
      <input type="text" name="observacoes" id="observacoes" value="<%= cuidado.observacoes %>">
    </div>

</div>
<div class="botoes">
  <input type="submit" value="Adicionar">

  <form action="<%= updateUrl %>/excluir" method="POST">
    <input type="submit" value="Excluir">
  </form>
  <form action="/listaAcolhidos" method="GET">
    <input type="submit" value="Voltar">
  </form>
</div>
</form>