<%- contentFor('body') %>
<div class="box effect1 flex-container">
    <div class="img-acolhido">
    </div>
    <div class="inf">
        <div class="text">
            <div>
                <span class="bold"> Nome: </span>
                <span>
                    <%=acolhido.nome%>
                </span>
            </div>
            <div>
                <span class="bold"> Idade: </span>
                <span>
                    <%=acolhido.idade%>
                </span>
            </div>
            <div>
                <span class="bold"> Peso: </span>
                <span>
                    <%=acolhido.peso%> kg
                </span>
            </div>
            <div>
                <span class="bold"> Alergias: </span>
                <span>
                    <%=acolhido.alergias%>
                </span>
            </div>
            <div>
                <span class="bold"> Via de alimentação: </span>
                <span>
                    <%=acolhido.viaAlimentacao%>
                </span>
            </div>
            <a href="/acolhido/<%= acolhido.id %>/edit" class="tiracor">
                <i class="fa fa-edit edit"></i>
                Editar informações
            </a>
        </div>
    </div>
</div>

<div class="centraliza">
    <form action="<%= acolhido.id %>/prescricao" method="POST" class="botoes">
        <input type="submit" value="Nova Prescrição">
    </form>


    <form action="/acolhido/lista" class="botoes">
        <input type="submit" value="Voltar">
    </form>
</div>
