<%- contentFor('body') %>
	<p class="nome-acolhido"> Nome:
		<%= dieta.prescricao.acolhido.nome %>
	</p>

	<h1>Dieta</h1>
	<form action="<%= updateUrl %>" method="POST">
		<div>
			<label for="tipo">Tipo:</label>
			<input type="text" name="tipo" id="tipo" value="<%= dieta.tipo %>">
		</div>

		<div>
			<label for="intervalo">Intervalo:</label>
			<input type="text" name="intervalo" id="intervalo" value="<%= dieta.intervalo %>">
		</div>

		<div>
			<label for="observacoes">Observação:</label>
			<input type="text" name="observacoes" id="observacoes" value="<%= dieta.observacoes %>">
		</div>

		<div class="botoes">
		</form>
		<input type="submit" value="Salvar" onclick="alert('Medicamento adicionado')">

		<form class="botoes" action="/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit/dieta/<%=dieta.id%>/destroy" method="POST">
			<input type="submit" value="Cancelar">
		</form>

		<input type="button" onclick="location.href='/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit'" value="Voltar">

		</div>