<%- contentFor('body') %>

	<p class="nome-acolhido"> Nome:
		<%= dieta.prescricao.acolhido.nome %>
	</p>

	<h1>Dieta</h1>

	<form action="<%= updateUrl %>" method="POST">
		<div>
			<label for="tipo">Tipo:</label>
			<input type="text" name="tipo" id="tipo" value="<%= dieta.tipo %>">
		</div>

		<div>
			<label for="intervalo">Intervalo:</label>
			<input type="text" name="intervalo" id="intervalo" value="<%= dieta.intervalo %>">
		</div>

		<div class="botoes">
			<input type="submit" value="Salvar" onclick="alert('Dieta adicionada')">
			<form action="/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit/medicamento/:medicamento_id/edit/excluir/" method="POST">
				<input type="submit" value="Excluir">
			</form>
			<a href="/acolhido/<%=acolhidoId%>/prescricao/<%=prescricaoId%>/edit">Voltar</a>
		</div>
	</form>