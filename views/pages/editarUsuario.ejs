<%- contentFor('body') %>
    <div class="botao-voltar">
        <a href="/usuario/<%=usuario.id%>">Voltar</a>
    </div>

    <div class="editar-acolhido">
        <form action="<%= updateUrl %>" method="POST">
            <div class="form-group row">
                <label for="nome" class="col-sm-2 col-form-label col-form-label-lg">Nome:</label>
                <input type="text" name="nome" id="nome" value="<%= usuario.nome %>" class="form-control form-control-lg col-sm-8">
            </div>
            <div class="form-group row">
                <label for="senha" class="col-sm-2 col-form-label col-form-label-lg">Senha:</label>
                <input type="password" name="senha" id="senha" value="<%= usuario.senha %>" class="form-control form-control-lg col-sm-8">
            </div>

            <div class="form-group row  tipo-usuario">
                <div class="adiciona-tipo-usuario">Tipo de Usuário:</div>
                <div class="tipo-usuario">
                    <input type="radio" name="tipo" value="clinica"> Clínica
                    
                    <input type="radio" name="tipo" value="neurologista"> Neurologista
                    
                    <input type="radio" name="tipo" value="farmaceutica"> Farmacêutica
                </div>
            </div>
            </div>
            <div class="add-tipo">
            <div class="botoes">
                <input type="submit" value="Salvar">
            
        </form>

        <form action="/usuario/<%=usuario.id%>/excluir" method="POST">
                <input type="submit" value="Excluir usuario" onclick="return confirm('Tem certeza que deseja excluir esse usuario?')">
            </div>
        </form>
        </div>