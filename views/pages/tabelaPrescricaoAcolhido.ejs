<table class="tabela-prescricao">
    <tr>
        <th>Data</th>
        <th>Validade</th>
        <th>Abrir</th>
        <th>Excluir</th>
    </tr>

    <%for (prescricao of prescricaos){%>
        <tr>
            <td>
                <%= prescricao.data %>
            </td>
            <td>
                <%= prescricao.validade %>
            </td>

            <td>
                <form action="<%= acolhido.id%>/prescricao/<%= prescricao.id%>/edit" method="get" class="botoes">
                    <input type="submit" value="Abrir">
                </form>
            </td>

            <td>
                <form action="<%= acolhido.id %>/prescricao/<%= prescricao.id %>/destroy" method="post" class="botoes">
                    <input type="submit" value="Excluir">
                </form>
            </td>
        </tr>
        <%}%>

</table>