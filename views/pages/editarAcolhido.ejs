<%- contentFor('body') %>

  <div class="right botao-voltar">
    <a href="/acolhido/<%=acolhido.id%>">Voltar</a>
  </div>

  <div class="editar-acolhido">
    <p class="nome-acolhido"> Nome:
      <%= acolhido.nome %>
    </p>
    <form action="<%= updateUrl %>" method="POST">
      <div class="form-group row">
        <label for="idade" class="col-sm-2 col-form-label col-form-label-lg">Idade:</label>
        <input type="text" name="idade" id="idade" value="<%= acolhido.idade %>" class="form-control form-control-lg col-sm-8">
      </div>
      <div class="form-group row">
        <label for="peso" class="col-sm-2 col-form-label col-form-label-lg">Peso:</label>
        <input type="text" name="peso" id="peso" value="<%= acolhido.peso %>" class="form-control form-control-lg col-sm-8">
      </div>
      <div class="form-group row">
        <label for="alergias" class="col-sm-2 col-form-label col-form-label-lg">Alergia:</label>
        <input type="text" name="alergias" id="alergias" value="<%= acolhido.alergias %>" class="form-control form-control-lg col-sm-8">
      </div>
      <div class="form-group row">
        <label for="viaAlimentacao" class="col-sm-3 col-form-label col-form-label-lg">Via Alimentação:</label>
        <input type="text" name="viaAlimentacao" id="viaAlimentacao" value="<%= acolhido.viaAlimentacao %>" class="form-control form-control-lg col-sm-7">
      </div>
      <div class="botoes">
        <input type="submit" value="Salvar">
      </div>
    </form>
  </div>